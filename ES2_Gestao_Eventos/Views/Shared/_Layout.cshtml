<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - ES2_Gestao_Eventos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/ES2_Gestao_Eventos.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            @* <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ES2_Gestao_Eventos</a> *@
            @* <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" *@
            @*         aria-expanded="false" aria-label="Toggle navigation"> *@
            @*     <span class="navbar-toggler-icon"></span> *@
            @* </button> *@
            
             <div class="navbar-nav ml-auto">
                <ul class="navbar-nav">
                    @if (UserSessao.HasSession() && UserSessao.Role.Equals("UserManager"))
                    {
                        <li class="nav-item">
                            <a class="nav-link "  asp-controller="Home" asp-action="IndexUserManager">Index</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link "  asp-controller="Eventos" asp-action="ListarEventosManager">Eventos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link "  asp-controller="Utilizadores" asp-action="ListarUsers">Users</a>
                        </li>
                    }
                    @if (UserSessao.HasSession() && UserSessao.Role.Equals("Organizador"))
                    {
                        <li class="nav-item">
                            <a class="nav-link "  asp-controller="Home" asp-action="IndexOrganizador">Index</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link "  asp-controller="Eventos" asp-action="ListarEventos">Eventos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link "  asp-controller="Perfil" asp-action="VerPerfil">Perfil</a>
                        </li>
                    }
                    @if (UserSessao.HasSession() && UserSessao.Role.Equals("Participante"))
                    {
                        <li class="nav-item">
                            <a class="nav-link "  asp-controller="Home" asp-action="Index">Index</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link "  asp-controller="Eventos" asp-action="ListarEventosTodos">Eventos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link "  asp-controller="Perfil" asp-action="VerPerfil">Perfil</a>
                        </li>
                    }
                </ul>
            </div>
            <div class="navbar-nav ml-auto">
                <ul class="navbar-nav">
                    <li class="nav-item  float-right">
                        <a class="nav-link " asp-area="" asp-controller="Autenticacao" asp-action="Logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2023 - ES2_Gestao_Eventos - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>