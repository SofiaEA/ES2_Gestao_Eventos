@model ES2_Gestao_Eventos.Database.Entities.Evento

@{
    ViewData["Title"] = "Criar Evento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h1>Criar Evento</h1>
</div>
<hr/>
<div class="container">
    <form asp-action="CriarEvento">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group w-50 m-auto p-3">
                <label asp-for="Nome" class="control-label">Nome:</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group w-50 m-auto p-3">
                <label asp-for="Local" class="control-label">Localização:</label>
                <input asp-for="Local" class="form-control" />
                <span asp-validation-for="Local" class="text-danger"></span>
            </div>
            <div class="form-group w-50 m-auto p-3">
                <label asp-for="Descricao" class="control-label">Descrição:</label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group w-50 m-auto p-3">
                <label asp-for="Capacidademax" class="control-label">Capacidade Máxima:</label>
                <input asp-for="Capacidademax" class="form-control" />
                <span asp-validation-for="Capacidademax" class="text-danger"></span>
            </div>
            <div class="form-group w-50 m-auto p-3">
                <label asp-for="Data" class="control-label">Data:</label>
                <input asp-for="Data" class="form-control"/>
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
         <div class="form-group w-50 m-auto p-3"> 
             <label asp-for="IdCategoria" class="control-label">Categoria:</label> 
             <select asp-for="IdCategoria" class="form-control">  
                  <option value="">Selecione uma categoria</option>  
                  @foreach (var categoria in ViewBag.Categorias)  
                  {  
                      <option value="@categoria.IdCategoria">@categoria.Nome</option>  
                  }  
              </select>
         </div>
        <div class="form-group text-center">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>

<div class="text-center">
    <a asp-action="ListarEventos">Listar</a>
</div>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}